<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Profile Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_user_profile"
            android:layout_gravity="center_vertical"
            android:layout_above="@id/dashboard_banner"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Habibah Johan"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- Dashboard Banner -->
    <ImageView
        android:id="@+id/dashboard_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_dashboard_banner"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/dashboard_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:layout_alignBottom="@id/dashboard_banner"
        android:layout_centerHorizontal="true"
        android:background="#80000000"
        android:padding="8dp" />

    <!-- Integrated Map -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/dashboard_banner"
        android:layout_marginTop="16dp">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!-- Alerts Section -->
    <LinearLayout
        android:id="@+id/alerts_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/map_container"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/flood_alert"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:background="#FFCDD2"
                android:text="Flood Alert!\n'Flood warning in your area. Evacuate to safe zones immediately.'"
                android:textColor="#000000"
                android:gravity="center" />

            <TextView
                android:id="@+id/heavy_rain_alert"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:background="#FFF9C4"
                android:text="Heavy Rain Alert!\n'Stay indoors and avoid unnecessary travel.'"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_emergency_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Service" />

        <Button
            android:id="@+id/btn_community_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Community Report"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btn_safety_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Safety Information"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btn_disaster_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disaster Prone Area"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</RelativeLayout>
