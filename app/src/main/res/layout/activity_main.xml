<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Banner and Profile Section -->
    <FrameLayout
        android:id="@+id/banner_with_profile"
        android:layout_width="0dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Dashboard Banner -->
        <ImageView
            android:id="@+id/dashboard_banner"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_dashboard_banner" />

        <!-- Profile Section -->
        <LinearLayout
            android:id="@+id/profile_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_user_profile" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="Habibah Johan"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>

    <!-- Integrated Map -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/banner_with_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!-- Alerts Section -->
    <LinearLayout
        android:id="@+id/alerts_section"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_background"
        app:layout_constraintTop_toBottomOf="@id/map_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/flood_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="ALERT"
            android:textColor="#FF0000"
            android:backgroundTint="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_evacuation_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FF0000"
            android:padding="8dp"
            android:text="EVACUATION ROUTE"
            android:textColor="@color/white"
            android:textStyle="bold" />


        </LinearLayout>


        <!-- GridLayout for Buttons in 2x2 grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/alerts_section"
            android:spacing="8dp">

            <Button
                android:id="@+id/btn_emergency_service"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="emergency service" />

            <Button
                android:id="@+id/btn_community_report"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="community report"
                android:layout_gravity="right"/>

            <Button
                android:id="@+id/btn_safety_info"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="download safety info" />

            <Button
                android:id="@+id/btn_disaster_area"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="disaster prone area"
                android:layout_gravity="right"/>

        </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
